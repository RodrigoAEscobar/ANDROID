<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contextClickable="true"
    tools:context="com.rodrigoescobar.www.petrec.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/petrec2" />

    <Button
        android:id="@+id/main_MyPets_button"
        android:layout_width="195dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:height="125dp"
        android:background="#f5ee8d"
        android:text="My Pets"
        android:textAlignment="center"
        android:textColor="#79b866"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_pet_records_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_MyPets_button"
        android:height="250dp"
        android:background="#3968bf"
        android:elegantTextHeight="false"
        android:text="PET RECORDS"
        android:textAlignment="center"
        android:textColor="#f5ee8d"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_search_button"
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:background="#79b866"
        android:text="SEARCH"
        android:textColor="#3968bf"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/main_pet_records_button"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
