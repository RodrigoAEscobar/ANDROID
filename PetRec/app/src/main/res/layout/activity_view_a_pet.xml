<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rodrigoescobar.www.petrec.MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="PET INFORMATION"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#02497b"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="PET INFORMATION"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/delete_pet_gender" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/delete_pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/delete_pet_type"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_margin="5dp"
        android:text="Type: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/delete_pet_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:layout_margin="5dp"
        android:text="Birthday: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/delete_pet_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/delete_pet_type"
        android:layout_below="@+id/delete_pet_type"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView12"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/delete_pet_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/delete_pet_birthday"
        android:layout_alignStart="@+id/delete_pet_birthday"
        android:layout_below="@+id/textView12"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/delete_pet_gender"
        android:layout_margin="5dp"
        android:text="Gender: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="OWNER INFORMATION"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_below="@+id/textView13"
        android:layout_toEndOf="@+id/textView12"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        android:layout_margin="5dp"
        android:text="Name: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/delete_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/delete_pet_gender"
        android:layout_alignStart="@+id/delete_pet_gender"
        android:layout_below="@+id/textView14"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_margin="5dp"
        android:text="Address: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/delete_owner_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/delete_owner_name"
        android:layout_alignStart="@+id/delete_owner_name"
        android:layout_alignTop="@+id/textView16"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/delete_owner_address"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView13" />

    <TextView
        android:id="@+id/delete_owner_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignEnd="@+id/delete_owner_address"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/view_cancel_button"
        style="@style/MyActionButtonOverflow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f78383"
        android:backgroundTintMode="src_over"
        android:text="CLOSE"
        android:textColor="#5e0202"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/delete_owner_phone"
        android:layout_marginTop="2dp"
        android:layout_alignStart="@+id/textView17" />

</RelativeLayout>
