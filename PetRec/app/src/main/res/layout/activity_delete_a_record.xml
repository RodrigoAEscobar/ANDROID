<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rodrigoescobar.www.petrec.MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="DELETE A RECORD"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#02497b"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:nextFocusDown="@+id/delete_record_date_editText"
        android:text="Visit Reason:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/delete_record_reason_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView22"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delete_record_date_editText"
        android:layout_alignParentStart="true"
        android:nextFocusDown="@+id/delete_record_date_editText"
        android:text="Date:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/delete_record_date_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_record_reason_editText"
        android:layout_toEndOf="@+id/textView22"
        android:ems="10"
        android:inputType="date"
        android:nextFocusDown="@+id/delete_record_diagnostic_editText"
        android:text="    /    /    "
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/delete_record_date_editText"
        android:text="Diagnostic:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/delete_record_diagnostic_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_record_cost_editText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView23"
        android:ems="10"
        android:inputType="textMultiLine"
        android:nextFocusDown="@+id/delete_record_cost_editText"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_record_vet_name_editText"
        android:text="Cost:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/delete_record_cost_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_record_vet_name_editText"
        android:layout_alignEnd="@+id/delete_record_vet_name_editText"
        android:layout_alignStart="@+id/textView8"
        android:ems="10"
        android:inputType="numberDecimal"
        android:nextFocusDown="@+id/delete_record_cost_editText"
        android:text="$"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_a_record_cancel_button"
        android:layout_alignParentStart="true"
        android:text="Vet. Name:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/delete_record_vet_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_a_record_cancel_button"
        android:layout_alignEnd="@+id/delete_a_record_cancel_button"
        android:layout_alignStart="@+id/delete_record_date_editText"
        android:nextFocusDown="@+id/delete_record_save_imageButton"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:id="@+id/delete_a_record_delete_button"
        style="@style/MyActionButtonOverflow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#7fc775"
        android:backgroundTintMode="src_over"
        android:text="DELETE"
        android:textColor="#032300"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="1dp" />

    <Button
        android:id="@+id/delete_a_record_cancel_button"
        style="@style/MyActionButtonOverflow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#f78383"
        android:backgroundTintMode="src_over"
        android:text="CANCEL"
        android:textColor="#5e0202"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="1dp" />

</RelativeLayout>
